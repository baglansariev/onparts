<div class="swiper-viewport">
    <div id="slideshow{{ module }}" class="swiper-container">
        <div class="swiper-wrapper">
            {% for banner in banners %}
                <div class="swiper-slide main-slide">
                    {% if banner.link %}
                    <a href="{{ banner.link }}">
                        <img src="{{ banner.image }}" alt="{{ banner.title }}" />
                    </a>
                    {% else %}
                        <a>
                            <img src="{{ banner.image }}" alt="{{ banner.title }}" />
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>

        <!--<div class="swiper-wrapper">
            {% for banner in banners %}
                <div class="swiper-slide text-center">
                    {% if banner.link %}
                        <a href="{{ banner.link }}" style="background-image: url({{ banner.image }})"></a>
                    {% else %}
                        <a style="background-image: url({{ banner.image }})"></a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>-->
    </div>
    <div class="swiper-pagination slideshow{{ module }}"></div>
    <div class="swiper-pager">
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>
<script type="text/javascript"><!--
    $('#slideshow{{ module }}').swiper({
        mode: 'horizontal',
        slidesPerView: 1,
        pagination: '.slideshow{{ module }}',
        paginationClickable: true,
        nextButton: '.swiper-button-next',
        prevButton: '.swiper-button-prev',
        // spaceBetween: 30,
        autoplay: 2500,
        autoplayDisableOnInteraction: true,
        loop: true
    });
    --></script>