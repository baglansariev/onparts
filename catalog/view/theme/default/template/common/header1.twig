    <div class="header-mid">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <div class="header-mid-parts">
                        <div class="logo">
                            <a href="{{ home }}">
                                <img src="{{ logo }}" title="{{ name }}" alt="{{ name }}"/>
                            </a>
                        </div>
                        <div class="header-search">
                            {{ search }}
                            <button class="mobile-search">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                        <div class="header-callback">
                            <button class="main-btn" type="button" id="callback" onclick="prod.getForm()">
                                <span>Заказать звонок</span>
                                <i class="fa fa-phone"></i>
                            </button>
                            <div class="callback-cover">
                                <div class="container">
                                    <div class="callback-form row">
                                        <div class="col-md-5 col-sm-12">
                                            <form method="post">
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        <input type="text" name="cl_name" placeholder="Ф.И.О" required>
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <input type="text" class="phone_mask" name="cl_phone" placeholder="Телефон" required>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        <input type="email" name="cl_email" placeholder="E-mail" required>
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <input type="number" name="cl_captcha" placeholder="3 х 3 = ?" required>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-lg-12">
                                                        <textarea name="cl_msg" placeholder="Сообщение"></textarea>
                                                        <button type="button" class="btn main-btn" onclick="prod.send()">Отправить</button>
                                                    </div>
                                                </div>
                                                <span class="callback-close" onclick="prod.closeForm()">
                                            <i class="fa fa-times"></i>
                                        </span>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-bottom">
        <div class="container">
            <div class="row">
                <div class="header-category col-sm-3 col-xs-2">
                    <div class="header-category-title" onclick="menuSwitcher.toggle('.mobile-categories-list', '.mobile-category-link')">
                        <p>
                            {{ text_category }}
                        </p>
                        <span class="mobile-category-toggler">
                            <i class="fa fa-bars"></i>
                        </span>
                        <div class="mobile-categories-list list-hidden">
                            {% for category in categories %}
                                <a href="{{ category.href }}" class="mobile-category-link">
                                    <span>{{ category.name }}</span>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="main-menu-container col-xs-9">
                    {% if informations %}
                        <div class="main-menu">
                            <a class="main-menu-point" href="/">Главная</a>
                            {% for information in informations %}
                                <a class="main-menu-point" href="{{ information.href }}">{{ information.title }}</a>
                            {% endfor %}
                        </div>
                        <span class="mobile-menu-toggler" onclick="menuSwitcher.toggle('.mobile-menu', '.mobile-menu-point')">
                            <i class="fa fa-bars"></i>
                        </span>
                        <div class="mobile-menu">
                            <a class="mobile-menu-point" href="/">Главная</a>
                            {% for information in informations %}
                                <a class="mobile-menu-point" href="{{ information.href }}">{{ information.title }}</a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
